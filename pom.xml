<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.netcetera.nca-301-5.maven.pom</groupId>
        <artifactId>nca-parent</artifactId>
        <version>21.0</version>
        <relativePath />
    </parent>

    <groupId>com.fsavevsk</groupId>
    <artifactId>time-tracking</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Time Tracking Parent POM</name>
    <description>This pom is a maven aggregator that contains all application modules.</description>

    <url>https://extranet.netcetera.biz/bitbucket/scm/~fsavevsk/time-tracking-app.git</url>

    <modules>
        <module>time-tracking-application</module>
        <module>time-tracking-core</module>
        <module>time-tracking-persistence</module>
    </modules>

    <properties>
        <nca.project.id>nca-341-2</nca.project.id>
        <spring-boot.version>3.4.3</spring-boot.version>
    </properties>

    <dependencies>
        <!-- Lombok (for cleaner code) -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <!-- Spring Platform Management -->
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>${spring-boot.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <!-- Project dependencies -->
            <dependency>
                <groupId>com.fsavevsk</groupId>
                <artifactId>time-tracking-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.fsavevsk</groupId>
                <artifactId>time-tracking-persistence</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <version>${spring-boot.version}</version>
                    <configuration>
                        <excludes>
                            <exclude>
                                <groupId>org.projectlombok</groupId>
                                <artifactId>lombok</artifactId>
                            </exclude>
                        </excludes>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <scm>
        <connection>scm:git:https://extranet.netcetera.biz/bitbucket/scm/~fsavevsk/time-tracking-app.git</connection>
        <developerConnection>scm:git:https://extranet.netcetera.biz/bitbucket/scm/~fsavevsk/time-tracking-app.git
        </developerConnection>
        <url>https://extranet.netcetera.biz/bitbucket/scm/~fsavevsk/time-tracking-app.git</url>
        <tag>HEAD</tag>
    </scm>

</project>
